---
import { Image } from "astro:assets";
import { marked } from 'marked';
import { getCollection } from 'astro:content';

const workshopsAll = await getCollection('workshops');
const { camp } = Astro.props;

import '../styles/eliot-pico.css'

import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Sidebar from '@components/Sidebar.astro';
import Workshop from '@components/Workshop.astro';

const start = new Date(camp.start);
const startDate = start.toDateString();
const endDate = new Date(camp.end).toDateString();
const year = start.getFullYear();

function filter(w) {
  return year === w.data.year;
}
const workshops = Object.values(workshopsAll).filter(filter);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{camp.name}</title>
  </head>

  <body>
    <Header />
    <main class="container">
      <div class="row">
        <div class="col-xs-3">
          <aside>
            <Sidebar />
          </aside>
        </div>
        <div class="col-xs">
          <article>
            <h1>{camp.name}</h1>
            <p>{startDate} &mdash; {endDate}</p>

            <h2><i>{camp.theme}</i></h2>

            <slot />

          </article>

          <h2>Workshops</h2>
          {workshops.map((ws) => {
            const info = ws.data;

            const content = marked.parse(ws.body);
            const presenter = info.presenterUrl
                        ? ('<a href="' + info.presenterUrl + '" target="other"><b>' + info.presenter + '</b></a>')
                        : '<b>' + info.presenter + '</b>';
            console.log(info.img);
            return (
              <article>
                <h3>{info.title}</h3>
                <p set:html={presenter}></p>
                <Image src={info.img} alt={info.presenter}>
                <div set:html={content}></div>
              </article>
            )})}
    
        </div>
      </div>
    </main>
    <Footer />
  </body>

</html>
