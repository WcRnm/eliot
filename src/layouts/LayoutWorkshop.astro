---
const { workshop } = Astro.props;

import '../styles/eliot-pico.css'

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';

const caePage = "/camps/" + workshop.year + "/cae";
const presenter = workshop.presenterUrl
                        ? ('<a href="' + workshop.presenterUrl + '" target="other"><b>' + workshop.presenter + '</b></a>')
                        : '<b>' + workshop.presenter + '</b>';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{workshop.title}</title>
  </head>

  <body>
    <Header />
    <main class="container">
      <div class="row">
        <div class="col-xs-3">
          <aside>
            <Sidebar />
          </aside>
        </div>
        <div class="col-xs">
          <article>
            <h1>{workshop.title}</h1>
            <p set:html={presenter}></p>
            <p><a href={caePage}>Creative Arts Eliot {workshop.year}</a></p>

            <slot />

          </article>
        </div>
      </div>
    </main>
    <Footer />
  </body>

</html>
